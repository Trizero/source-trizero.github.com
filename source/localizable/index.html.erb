<!doctype html>
<html>
  <head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
    
    <title>Trizero srl</title>
    
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="apple-mobile-web-app-capable" content="yes">

    <%= stylesheet_link_tag 'main', media: 'screen' %>

    <link href='//fonts.googleapis.com/css?family=Droid+Sans:400,700|Text+Me+One' rel='stylesheet' type='text/css'>

    <link rel="author" href="humans.txt" />

  </head>

  <body>
    <header class="hero-unit">
      <h1><%= image_tag 'icon.ico' %>Trizero<sup><small><%= locales_links %></small></sup></h1>
    </header>

    <!--[if lt IE 7]>
    <div class="alert alert-block alert-error">
      <h4><%= I18n.t :aggiorna_il_browser %></h4>
      <%= I18n.t :aggiorna_il_browser_desc %>
    </div>
    <![endif]-->

    <div class="container-fluid">
      <div class="page-header">
        <h2><%= I18n.t :realizziamo_soluzioni %></h2>
      </div>
      <div class="row-fluid center">
        <div class="span3">
          <h3><%= I18n.t :website %></h3>
          <p>
            <%= I18n.t :website_desc %>
          </p>
        </div>
        <div class="span3">
          <h3><%= I18n.t :gestionali %></h3>
          <p>
           <%= I18n.t :gestionali_desc %>
          </p>
        </div>
        <div class="span3">
          <h3><%= I18n.t :mobile %></h3>
          <p>
            <%= I18n.t :mobile_desc %>
          </p>
        </div>
        <div class="span3">
          <h3><%= I18n.t :servizi %></h3>
          <p>
            <%= I18n.t :servizi_desc %>
          </p>
        </div>
      </div>
      <div class="row-fluid center hidden-phone">
        <div class="span3"><%= image_tag '107-widescreen.png' %></div>
        <div class="span3"><%= image_tag '33-cabinet.png' %></div>
        <div class="span3"><%= image_tag '32-iphone.png' %></div>
        <div class="span3"><%= image_tag '36-toolbox.png' %></div>
      </div>

      <span class="breathe breathe-strong"></span>

      <div class="page-header hidden-phone">
        <h2><%= I18n.t :il_team %></h2>
      </div>

      <div class="row-fluid hidden-phone center">
        <div class="span3" itemscope itemtype="http://schema.org/Person">
          <%= image_tag 'http://placehold.it/200x220', class: 'img-rounded', itemprop: 'image' %>
          <h5 itemprop="name">Alessandro Airoldi</h5>
          <span itemprop="jobTitle">FileMaker developer</span>
        </div>
        <div class="span3" itemscope itemtype="http://schema.org/Person">
          <%= image_tag 'http://placehold.it/200x220', class: 'img-rounded', itemprop: 'image' %>
          <h5 itemprop="name">Fabio Bosisio</h5>
          <span itemprop="jobTitle">FileMaker developer</span>
        </div>
        <div class="span3" itemscope itemtype="http://schema.org/Person">
          <%= image_tag 'http://placehold.it/200x220', class: 'img-rounded', itemprop: 'image' %>
          <h5 itemprop="name">Giuseppe Longhi</h5>
          <span itemprop="jobTitle">Web developer</span>
        </div>
        <div class="span3" itemscope itemtype="http://schema.org/Person">
          <%= image_tag 'http://placehold.it/200x220', class: 'img-rounded', itemprop: 'image' %>
          <h5 itemprop="name">Tecla Masserini</h5>
          <span itemprop="jobTitle">FileMaker developer</span>
        </div>
      </div>
      <span class="breathe"></span>
      <div class="row-fluid hidden-phone center">
        <div class="span3" itemscope itemtype="http://schema.org/Person">
          <%= image_tag 'http://placehold.it/200x220', class: 'img-rounded', itemprop: 'image' %>
          <h5 itemprop="name">Laura Milani</h5>
          <span itemprop="jobTitle">Graphic designer</span>
        </div>
        <div class="span3" itemscope itemtype="http://schema.org/Person">
          <%= image_tag 'http://placehold.it/200x220', class: 'img-rounded', itemprop: 'image' %>
          <h5 itemprop="name">Andrea Parmeggiani</h5>
          <span itemprop="jobTitle">Graphic designer</span>
        </div>
        <div class="span3" itemscope itemtype="http://schema.org/Person">
          <%= image_tag 'http://placehold.it/200x220', class: 'img-rounded', itemprop: 'image' %>
          <h5 itemprop="name">Fabio Polvara</h5>
          <span itemprop="jobTitle">Filemaker developer / CEO</span>
        </div>
      </div>

      <span class="breathe breathe-strong"></span>

      <div class="page-header">
        <h2><%= I18n.t :contattaci %></h2>
      </div>
      <div class="row-fluid">
        <div class="span6">
          <div class="hidden-phone">
          <div id="map_canvas"></div>
          </div>
        </div>
        <div class="span6">
          <strong>TRIZERO srl</strong><br>
          <div class="row-fluid">
            <div class="span6">
              <address>
                <dl>
                  <dt><%= I18n.t :indirizzo %></dt>
                  <dd>Via Provinciale, 12 - 23851 Galbiate (LC)</dd>

                  <dt><%= I18n.t :email %></dt>
                  <dd><a href="mailto:info@trizero.it">info@trizero.it</a></dd>

                  <dt><%= I18n.t :telefono %></dt>
                  <dd>+39 0341 541806</dd>

                  <dt><%= I18n.t :fax %></dt>
                  <dd>+39 0341 241955</dd>
                </dl>
              </address>
            </div>
            <div class="span6">
              <dl>
                <dt><%= I18n.t :area_web_e_grafica %></dt>
                <dd><a href="mailto:web@trizero.it">web@trizero.it</a></dd>
              </dl>

              <dl>
                <dt><%= I18n.t :area_gestionali %></dt>
                <dd><a href="mailto:gest@trizero.it">gest@trizero.it</a></dd>
              </dl>

              <dl>
                <dt><%= I18n.t :assistenza_numero_verde %></dt>
                <dd>+39 88 86 45 02</dd>
              </dl>
            </div>
          </div>
        </div>
      </div>
    </div>

    <footer>
      <span>
        <strong>&copy;TRIZERO srl</strong>
        <abbr title="Partita Iva">P.Iva</abbr> e <abbr title="Codice Fiscale">C.f.</abbr>: 03019970130
        <span class="hidden-phone">
          |
          <%= link_to 'humans.txt', 'humans.txt', target:'_blank' %>
          |
          <a href="http://www.w3.org/html/logo/" target="_blank"><%= image_tag 'HTML5_Logo_32.png' %></a>
        </span>
      </span>
    </footer>

    <%= javascript_include_tag 'app' %>
    <script type="text/javascript"src="//maps.googleapis.com/maps/api/js?&sensor=true"></script>
  </body>
</html>